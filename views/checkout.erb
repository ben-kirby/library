<div class="container">
  <div class="row">
    <div class="col">
      <form class="" action="/checkout" method="post">
        <div class="form-group">
          <label for="exampleFormControlSelect1">Select Patron</label>
          <select class="form-control">
            <%@patrons.each do |patron|%>
              <option><%= patron.name %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Select Book to Checkout</label>
          <select class="form-control">
            <%@books.each do |book|%>
              <option><%= book.name %></option>
            <% end %>
          </select>
        </div>
      </form>
    </div>
    <div class="col">

    </div>
  </div>

</div>
